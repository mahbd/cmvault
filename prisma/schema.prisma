generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean?
  image         String?
  role          String    @default("USER")
  
  sessions      Session[]
  accounts      Account[]

  commands      Command[]
  categories    Category[]
  tags          Tag[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([token])
  @@map("sessions")
}

model Account {
  id           String    @id @default(cuid())
  userId       String
  accountId    String
  providerId   String
  accessToken  String?
  refreshToken String?
  accessTokenExpiresAt DateTime?
  refreshTokenExpiresAt DateTime?
  scope        String?
  idToken      String?
  password     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@map("verifications")
}

model Command {
  id          String    @id @default(cuid())
  title       String?
  text        String
  description String?
  platform    String
  visibility  String    @default("PRIVATE")
  favorite    Boolean   @default(false)
  usageCount  Int       @default(0)

  categoryId  String?
  userId      String

  tags        CommandTag[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])
  category    Category? @relation(fields: [categoryId], references: [id])
  
  @@map("commands")
}

model Category {
  id       String    @id @default(cuid())
  name     String
  userId   String
  commands Command[]
  
  user     User      @relation(fields: [userId], references: [id])
  
  @@map("categories")
}

model Tag {
  id       String       @id @default(cuid())
  name     String
  userId   String
  commands CommandTag[]
  
  user     User      @relation(fields: [userId], references: [id])
  
  @@map("tags")
}

model CommandTag {
  commandId String
  tagId     String

  command   Command @relation(fields: [commandId], references: [id])
  tag       Tag     @relation(fields: [tagId], references: [id])

  @@id([commandId, tagId])
  @@map("command_tags")
}
